<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Pantalla3Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:contentDescription="Imagen de Android "
        android:layout_gravity="center"
        android:src="@drawable/img1"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_nombre"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/nombre"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:hint="Escriba aquÃ­ su nombre"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_edad"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:id="@+id/edad"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:inputType="number"
            android:hint="Escriba su edad"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/spinner"></Spinner>


    <Button
        android:id="@+id/leer_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer datos"
        android:layout_gravity="center"/>

</LinearLayout>